#bindsym $mod+XF86AudioRaiseVolume	exec amixer set Master 5%+ unmute

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status -c ~/.i3/status
	#mode hide
	modifier $mod
	position bottom
	colors {
		background #000000
		statusline #ffffff
		focused_workspace  #4c7899 #285577 #ffffff
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #2f343a #900000 #ffffff
	}
}

workspace_layout tabbed
# Application Defaults
#assign [class="^Chrome$"]		$workspace2
#assign [class="^Firefox$"]		$workspace2

workspace $workspace1 output VBOX0
workspace $workspace2 output VBOX0
workspace $workspace3 output VBOX0
workspace $workspace4 output VBOX0
workspace $workspace5 output VBOX0

workspace $workspace6 output VBOX1
workspace $workspace7 output VBOX1
workspace $workspace8 output VBOX1
workspace $workspace9 output VBOX1
workspace $workspace10 output VBOX1

